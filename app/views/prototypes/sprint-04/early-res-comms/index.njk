{% extends "layouts/main.html" %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">Choose your role before beginning user research</h1>
      
      {# UPDATED: Form action now points to 'select-role' #}
      <form action="select-role" method="post">
        {% from "govuk/components/radios/macro.njk" import govukRadios %}
        {{ govukRadios({
          name: "userRole",
          fieldset: {
            legend: {
              text: "Choose your role",
              isPageHeading: true,
              classes: "govuk-fieldset__legend--m"
            }
          },
          items: [
            { value: "landlord", text: "I am a landlord" },
            { value: "tenant", text: "I am a tenant" }
          ]
        }) }}

        {% from "govuk/components/button/macro.njk" import govukButton %}
        {{ govukButton({ text: "Continue" }) }}
      </form>
    </div>
  </div>
{% endblock %}